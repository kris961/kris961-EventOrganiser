@model EventOrganiser.Web.ViewModels.Event.EventViewModel
@using Microsoft.AspNetCore.Identity
@using EventOrganiser.Data.Models

@inject UserManager<ApplicationUser> userManager
@{string id = userManager.GetUserId(User);}
@inject EventOrganiser.Data.ApplicationDbContext dbContext;
@if (Model.EventsUser.Any(x => x.UserId == userManager.GetUserId(User)))
{
    if (userManager.GetUserId(User) == Model.HostId)
    {
        <div style="float:right" id="DeleteBtn" class="button-holder">
            <a href="/e/DeleteEvent?eventId=@Model.Id" class="btn btn-primary btn-block text-uppercase">Delete</a>
        </div>
        <div id="EditBtn" class="button-holder">
            <a href="/e/EditEvent?eventId=@Model.Id" class="btn btn-primary btn-block text-uppercase">Edit</a>
        </div>
    }
    else
    {
        <div class="button-holder">
            <a href="/e/RemoveUserFromEvent?eventId=@Model.Id" class="btn btn-primary btn-block text-uppercase">Leave</a>
        </div>
    }
}
else
{
    <div class="button-holder">
        <a href="/e/AddUserToEvent?eventId=@Model.Id" class="btn btn-primary btn-block text-uppercase">Join</a>
    </div>
}

<div class="container">

    <!-- Portfolio Item Heading -->
    <h1 class="my-4">
        @Model.Title
        <small>@Model.Entry</small>
    </h1>

    <!-- Portfolio Item Row -->
    <div class="row">

        <div class="col-md-8">
            <img class="img-fluid" src=@Model.Img alt="">
        </div>

        <div class="col-md-4">
            <h3 class="my-3">Details</h3>
            <p>@Model.Description</p>
            <h3 class="my-3">Project Details</h3>
            <ul>
                <li>Location: @Model.Location</li>
                <li>Date: @Model.Date</li>
            </ul>
        </div>

    </div>
    <!-- /.row -->
    <!-- Related Projects Row -->

</div>

<div class="row">
    @foreach (var comment in Model.Reviews)
    {

        <div class="col-md-8">
            <div class="media g-mb-30 media-comment">
                <img class="d-flex g-width-50 g-height-50 rounded-circle g-mt-3 g-mr-15" src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Image Description">
                <div class="media-body u-shadow-v18 g-bg-secondary g-pa-30">
                    <div class="g-mb-15">
                        <h5 class="h5 g-color-gray-dark-v1 mb-0">@comment.User.Username</h5>
                        <span class="g-color-gray-dark-v4 g-font-size-12">@comment.CreatedOn</span>
                    </div>

                    <p>
                        @comment.Messege
                    </p>

                    <ul class="list-inline d-sm-flex my-0">
                        <li class="list-inline-item g-mr-20">
                            <a class="u-link-v5 g-color-gray-dark-v4 g-color-primary--hover" href="#!">
                                <i class="fa fa-thumbs-up g-pos-rel g-top-1 g-mr-3"></i>
                                @comment.Like
                            </a>
                        </li>
                        <li class="list-inline-item g-mr-20">
                            <a class="u-link-v5 g-color-gray-dark-v4 g-color-primary--hover" href="#!">
                                <i class="fa fa-thumbs-down g-pos-rel g-top-1 g-mr-3"></i>
                                @comment.Dislike
                            </a>
                        </li>
                        <li class="list-inline-item ml-auto">
                            <a class="u-link-v5 g-color-gray-dark-v4 g-color-primary--hover" href="#!">
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    }
    <style>
        body {
            margin-top: 20px;
            background: #FDFDFD;
        }

        .g-height-50 {
            height: 50px;
        }

        .g-width-50 {
            width: 50px !important;
        }

        .g-bg-secondary {
            background-color: #fafafa !important;
        }

        .u-shadow-v18 {
            box-shadow: 0 5px 10px -6px rgba(0, 0, 0, 0.15);
        }

        .g-color-gray-dark-v4 {
            color: #777 !important;
        }

        .g-font-size-12 {
            font-size: 0.85714rem !important;
        }

        .media-comment {
            margin-top: 20px
        }
    </style>
</div>
