@model EventOrganiser.Web.ViewModels.Event.EventCreateViewModel

    <form method="post" asp-action="Create" enctype="multipart/form-data">
        <div class="form-group">
            <label for="Title">Title of event</label>
            <input asp-for="Title" type="text" class="form-control" id="exampleInputPassword1" placeholder="the title of your event">
        </div>
        <div class="form-group">
            <label for="Description">Description</label>
            <input asp-for="Description" type="text" class="form-control" placeholder="short description">
        </div>
        <div class="form-group">
            <label for="Location">Location</label>
            <input asp-for="Location" type="text" class="form-control" placeholder="the location of the event">
        </div>
        <div class="form-group">
            <label for="Date">Date</label>
            <input asp-for="Date" type="text" class="form-control" placeholder="the date and time of the event">
        </div>
        <div class="form-group">
            <label asp-for="Entry" class="control-label"></label>
            <select asp-for="Entry" class="form-control">
                <option value="Free">Free</option>
                <option value="Payed">Payed</option>
                <option value="InviteOnly">Invite Only</option>
                <option value="Fundraiser">Fundraiser</option>
            </select>
            <span asp-validation-for="Entry" class="text-danger"></span>
        </div>
        <label for="Image">Image</label>
        <div class="custom-file">
            <input asp-for="Img" class="custom-file-input">
            <label asp-for="Img" class="custom-file-label">Choose image...</label>
        </div>
        <button style="margin-top:10px" type="submit" class="btn btn-primary">Submit</button>
    </form>
