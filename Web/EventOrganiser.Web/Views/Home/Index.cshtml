@using EventOrganiser.Common
@model EventOrganiser.Web.ViewModels.Home.IndexViewModel
@{
    this.ViewData["Title"] = $"Welcome to {GlobalConstants.SystemName!}";
}

    <div class="text-center">
        <h1 class="display-4">@this.ViewData["Title"]</h1>
        <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
        @foreach (var appEvent in Model.Events)
        {
            <div class="card" style="width: 18rem;">
                <img src="@appEvent.Img" class="card-img-top" alt="@appEvent.Title">
                <div class="card-body">
                    <h5 class="card-title"><a href="@appEvent.Url">@appEvent.Title</a></h5>
                    <p class="card-text">@appEvent.Description</p>
                    <a href="#" class="btn btn-primary">Go somewhere</a>
                </div>
            </div>
        }
    </div>
